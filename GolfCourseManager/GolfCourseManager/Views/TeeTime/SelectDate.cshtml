@model GolfCourseManager.ViewModels.SelectDateViewModel

@{
	ViewData["Title"] = "Select Date";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Reserve</h2>

<form asp-action="SelectDate" method="post">
	<h4>Select Date</h4>
	<hr />
	<div asp-validation-summary="ValidationSummary.ModelOnly" class="text-danger"></div>
	<div class="form-group">
		<label asp-for="Date" class="col-md-2 control-label">Date</label>
		<input asp-for="Date" class="form-control" type="date" min="@DateTime.Now.Date" />
		<span asp-validation-for="Date" class="text-danger" />
	</div>
	<div class="form-group col-md-2">
		<input type="submit" value="Select" class="btn btn-success" />
		<a asp-controller="Home" asp-action="Index" class="btn btn-default">Cancel</a>
	</div>
</form>

@section scripts {
	<script src="~/lib/jquery/dist/jquery.min.js"></script>
	<script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
	<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}
