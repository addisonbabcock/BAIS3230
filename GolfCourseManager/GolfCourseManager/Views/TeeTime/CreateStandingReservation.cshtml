@model GolfCourseManager.ViewModels.ReservationCreatedViewModel
@{
	ViewBag.Title = "Reservations Created";
}

@section Scripts {
	<script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
	<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}


<div class="row">
	<div class="col-md-4 col-md-offset-4">
		<h1>Golf Course Manager - @ViewBag.Title</h1>
		<ul class="bg-success">
			@if (Model.Reservations == null)
			{
				<li class="alert alert-info">No reservations created.</li>
			}
			else
			{
				foreach (var reservationTime in Model.Reservations)
				{
				<li class="text-success">@reservationTime.ToString()</li>
				}
			}
		</ul>
		<ul class="bg-danger">
			@if (!String.IsNullOrWhiteSpace(Model.FailureReason))
			{
				<li class="alert alert-danger">@Model.FailureReason</li>
			}
			else if (Model.Failures == null)
			{
				<li class="alert alert-danger">No failures.</li>
			}
			else
			{
				foreach (var failureTime in Model.Failures)
				{
				<li class="alert alert-danger">@failureTime.ToString()</li>
				}
				<li class="alert alert-danger">Failed reservations are likely from conflicts with a previous reservation.</li>
			}
		</ul>


	</div>
</div>
