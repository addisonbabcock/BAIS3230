@model GolfCourseManager.ViewModels.ScoresIndexViewModel

@{
	ViewData["Title"] = "Previous Results";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@ViewData["Title"]</h2>

<p>
    <a asp-action="Create">Enter Score</a>
</p>
<table class="table">
    <tr>
        <th>
			Tee Time
        </th>
        <th>
            Score
        </th>
        <th></th>
    </tr>
    
@foreach (var item in Model.Results) {
    <tr>
        <td>
            @item.StartTime
        </td>
        <td>
            @item.Strokes
        </td>
        <td>
            <a asp-controller="Scores" asp-action="Details" asp-route-id="@item.TeeTimeId">Details</a>
        </td>
    </tr>
}
</table>
